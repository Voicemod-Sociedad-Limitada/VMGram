<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/vm_white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/bottomsheet_linear"
        android:layout_width="match_parent"
        android:background="@color/vm_white"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/headerLabel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:gravity="center|start"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:text="@string/SoundsBottomsheetHeader"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />



        <ImageView
            android:id="@+id/soundListBottomSheetCloseButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:contentDescription="close button"
            android:paddingTop="16dp"
            android:paddingRight="16dp"
            android:src="@drawable/ic_close_white"
            android:tint="@color/vm_dark_grey" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center|start"
        android:paddingLeft="16dp"
        android:layout_marginBottom="4dp"
        android:paddingTop="5dp"
        android:text="@string/SoundsBottomsheetSubtitle"
        android:textColor="@color/vm_grey_dark_5"
        android:textSize="11sp"/>


</LinearLayout>